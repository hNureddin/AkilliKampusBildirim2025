<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainNavBar"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/navBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reportListBtn"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:text="@string/report_list_button" />

                <Button
                    android:id="@+id/profileBtn"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:text="@string/profile_button" />

                <Button
                    android:id="@+id/mapBtn"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    android:text="@string/map_button" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.hne.akillikampusbildirim01.FirstFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/constrainNavBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>